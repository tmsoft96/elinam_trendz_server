<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="280dp"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Region"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/showPostDelivery_region"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="District"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/showPostDelivery_district"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Town"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:background="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/showPostDelivery_town"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Box Number"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:id="@+id/showPostDelivery_boxNumber"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Close"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:id="@+id/showPostDelivery_close"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205dp"
    android:layout_height="260dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:id="@+id/allPost_relative">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:src="@drawable/product"
            android:id="@+id/allPost_productImage"
            android:padding="1dp"
            android:layout_margin="1dp"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/plane_a"
            android:id="@+id/allPost_plane"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1c000000"
            android:layout_below="@id/allPost_productImage"
            android:orientation="vertical"
            android:id="@+id/allPost_linear">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:id="@+id/allPost_productName"/>

            <TextView
                android:id="@+id/allPost_productPrice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GHCXXX"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="17sp"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/allPost_relativePrice">

                <TextView
                    android:id="@+id/allPost_productPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GHCXXX"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:background="@color/buttonColorPressed"
                    android:id="@+id/allPost_priceConceal"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GHCXXX"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textSize="16sp"
                android:id="@+id/allPost_productDiscountPrice"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100% off"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:textColor="@color/white"
            android:id="@+id/allPost_productDiscountPercent"
            android:layout_above="@id/allPost_linear"
            android:layout_alignParentRight="true"/>
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_textbox"
            android:layout_toLeftOf="@id/allPost_productDiscountPercent"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/plane_b"
                android:id="@+id/planeB"
                android:layout_centerVertical="true"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/planeB"
                android:gravity="center"
                android:text="Shipped from Abroad"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="center"
    android:layout_margin="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editLinear1">

                <TextView
                    android:id="@+id/editS_close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_round"
                    android:text="x"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Special Product"
                    android:textStyle="bold"
                    android:textColor="#ffe600"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/editLinear1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/special_price"
                        android:layout_margin="5dp"
                        android:id="@+id/editS_packageImage"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Package Name"
                        android:textStyle="bold"
                        android:textColor="#f52a86"
                        android:textSize="20dp"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        android:id="@+id/editS_packageName"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All entries made here will not affect the original one's"
                    android:textStyle="bold"
                    android:textColor="#ffe600"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Product Name"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/editS_productName"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/product_name"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="7dp"/>

                <MultiAutoCompleteTextView
                    android:id="@+id/editS_productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textbox_white"
                    android:drawableLeft="@drawable/product_description"
                    android:drawablePadding="10dp"
                    android:hint="Product Description"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark" />

                <AutoCompleteTextView
                    android:id="@+id/editS_productPrice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textbox_white"
                    android:drawableLeft="@drawable/product_prize"
                    android:drawablePadding="10dp"
                    android:hint="Product Price"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:editable="false"/>

                <AutoCompleteTextView
                    android:id="@+id/editS_productPriceSpecial"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/textbox_white"
                    android:drawableLeft="@drawable/special_price"
                    android:drawablePadding="10dp"
                    android:hint="Special Product Price"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"/>

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Quantity Available"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/editS_productQuantityAvailable"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/product_description"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="number"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Add Product Video"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:background="@drawable/textbox_white"
                    android:id="@+id/editS_productVideo"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawableLeft="@drawable/video"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:drawablePadding="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:inputType="textUri"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/editS_productPicture1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:padding="10dp"
                        android:src="@drawable/product" />

                    <ImageView
                        android:id="@+id/editS_productPicture2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:padding="10dp"
                        android:src="@drawable/product" />

                    <ImageView
                        android:id="@+id/editS_productPicture3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:padding="10dp"
                        android:src="@drawable/product" />

                </LinearLayout>

                <Button
                    android:id="@+id/editS_buttonProduct"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:text="Add Special Product"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
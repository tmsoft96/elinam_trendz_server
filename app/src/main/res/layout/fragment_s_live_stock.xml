<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InnerFragment.YourLocalMarketFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentLivestock_refresh">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Your Local Market"
                    android:drawableLeft="@drawable/livestock"
                    android:drawableStart="@drawable/livestock"
                    android:drawablePadding="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/fragmentLivestock_mainText" />

                <TextView
                    android:id="@+id/fragmentLivestock_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:scrollbars="vertical"
                    android:text="Add Comment about the category"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_livestock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:id="@+id/fragmentLivestock_showDetails"
                android:background="@drawable/sort_down"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:id="@+id/fragmentLivestock_hideDetails"
                android:background="@drawable/sort_up"
                android:visibility="invisible"/>

        </RelativeLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
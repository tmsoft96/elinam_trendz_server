                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Delivery Date"
                        android:background="@drawable/button"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/edit_white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/viewProductOrderDetails_deliveryDateEdit"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Confirm : "
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Delivered"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/viewProductOrderDetails_deliveryConfirm"/>

                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Delivery"
                        android:background="@drawable/button"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/edit_white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/viewProductOrderDetails_editDelivery"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"

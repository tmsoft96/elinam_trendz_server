<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ViewPolicyActivity">

    <include
        layout="@layout/main_navigation_toolbar"
        android:id="@+id/viewPolicy_toolbar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/viewPolicy_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_below="@id/viewPolicy_toolbar"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPolicy_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPolicy_tabs"/>

</RelativeLayout>
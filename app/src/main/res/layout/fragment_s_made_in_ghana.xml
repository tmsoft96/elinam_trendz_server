<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.InnerFragment.MadeInGhanaFragment">

      <android.support.v4.widget.SwipeRefreshLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/fragmentMadeInGhana_refresh">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:text="Made In Ghana"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:drawableLeft="@drawable/m_ghana"
                            android:drawableStart="@drawable/m_ghana"
                            android:drawablePadding="20dp"
                            android:paddingLeft="10dp"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/main_textOthers"/>

                        <TextView
                            android:id="@+id/fragmentMadeInGhana_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_madeInGhana"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"/>

                  </LinearLayout>

                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_alignParentRight="true"
                      android:id="@+id/fragmentMadeInGhana_showDetail"
                      android:background="@drawable/sort_down"/>

                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_alignParentRight="true"
                      android:id="@+id/fragmentMadeInGhana_hideDetail"
                      android:background="@drawable/sort_up"
                      android:visibility="invisible"/>

            </RelativeLayout>

      </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.InnerFragment.BulkPurchaseFragment">

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragmentOrderOfMe_refresh">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bulk Purchase"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:drawableLeft="@drawable/m_order_for_me"
                            android:drawableStart="@drawable/m_order_for_me"
                            android:drawablePadding="20dp"
                            android:paddingLeft="10dp"
                            android:background="@color/colorPrimaryDark"
                            android:id="@+id/main_textElectronics"/>

                        <TextView
                            android:id="@+id/fragmentOrderOfMe_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone"/>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_orderForMe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/fragmentOrderOfMe_showDetails"
                        android:background="@drawable/sort_down"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/fragmentOrderOfMe_hideDetails"
                        android:background="@drawable/sort_up"
                        android:visibility="invisible"/>

                </RelativeLayout>

        </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>